%html
  %head
    %title Gooi
    = stylesheet_link_tag 'screen'
    = javascript_include_tag :defaults
    = csrf_meta_tag
    %body
      .container
        - if current_user
          #user_nav(class="right") Welcome, #{current_user.name} | #{link_to("Sign out", signout_path)}
          = image_tag("logo.png")
        - flash.each do |name, message|
          %div(class="#{name}")= message
        = yield
    %footer Â© 2010 Studio Kurage. All Rights Reserved.
